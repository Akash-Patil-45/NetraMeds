<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView style="@style/SettingsHeader" android:text="Accessibility"/>
        <RelativeLayout style="@style/SettingsItem">
            <TextView style="@style/SettingsItemText" android:text="Text Size\nAdjust text size for better readability"/>
            <TextView style="@style/SettingsItemValue" android:text="Medium"/>
        </RelativeLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/SettingsSwitch"
            android:text="High Contrast Mode\nEnable high contrast mode for improved visibility"/>

        <TextView style="@style/SettingsHeader" android:text="Notifications" android:layout_marginTop="24dp"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/SettingsSwitch"
            android:text="Vibration\nEnable vibration for alarms"/>

        <TextView style="@style/SettingsHeader" android:text="Security" android:layout_marginTop="24dp"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/SettingsSwitch"
            android:text="PIN Lock\nEnable PIN lock for app access"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/SettingsSwitch"
            android:text="Biometric Lock\nEnable biometric lock for app access"/>

    </LinearLayout>
</ScrollView>